<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="clip_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutMode="clipBounds"
    card_view:cardCornerRadius="1dp"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardElevation="5dp" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="240dp"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <QuickContactBadge
            android:id="@+id/photo_contact"
            android:contentDescription="@string/photo"
            android:src="@drawable/avatar_empty"
            style="@style/GridImage"
            android:layout_alignBottom="@+id/checkImageView" />

        <QuickContactBadge
            android:id="@+id/checkImageView"
            style="@style/EditImage"
            android:contentDescription="checkmarked"
            android:src="@drawable/avatar_selected"
            android:visibility="visible" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="John Doe"
            android:layout_below="@id/photo_contact"
            android:padding="4dp"
            android:textColor="@color/primary"
            android:gravity="bottom|left"
            android:layout_alignRight="@+id/photo_contact"
            android:layout_alignEnd="@+id/photo_contact"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_text_size_small_material" />

</RelativeLayout>

</android.support.v7.widget.CardView>